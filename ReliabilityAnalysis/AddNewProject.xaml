<Window x:Class="ReliabilityAnalysis.AddNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReliabilityAnalysis"
        mc:Ignorable="d"
        Title="Создание нового проекта" Height="96.894" Width="472.944" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="projectName" TextWrapping="Wrap" Text="Новый проект"   VerticalContentAlignment="Center"  Grid.Column="1" Margin="10" />
        <Button Content="Добавить"  Click="AddNewProjectClick"  Grid.Column="2" Margin="10"/>
        <Label Content="Название проекта"  Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>

<Window x:Class="ReliabilityAnalysis.AddNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReliabilityAnalysis"
        mc:Ignorable="d"
        Title="Создание нового проекта" Height="109.996" Width="417.997" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="projectName" TextWrapping="Wrap" Text="Новый проект"   VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="10" />
        <Button Content="Добавить"  Click="AddNewProjectClick"  Grid.Column="1" Margin="10" Grid.Row="1" />
        <Button Content="Отмена"  Click="CancelClick"  Grid.Column="2" Margin="10" Grid.Row="1"/>
        <Label Content="Введите название нового проекта"  Grid.Column="0" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="3" Margin="10,0"/>
    </Grid>
</Window>

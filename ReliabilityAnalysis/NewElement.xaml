<Window x:Class="ReliabilityAnalysis.NewElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReliabilityAnalysis"
        mc:Ignorable="d" Height="110" Width="318" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Title="Добавление ЭРИ">
    <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите позиционное обозначение" HorizontalContentAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" Margin="10,0,-74,0"/>
        <Button Content="Отмена"  Click="CancelClick" Grid.Column="1"  Grid.Row="1" Margin="81,5,-76,3" />
        <Button Content="Добавить"  Click="AddEriToProject" Grid.Column="1" Grid.Row="1" Margin="5,5,0,3"/>
        <TextBox x:Name="Designation"   Grid.Column="0" Grid.Row="1" Margin="10,0,0,0" />

    </Grid>
</Window>
